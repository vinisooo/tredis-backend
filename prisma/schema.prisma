// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int   @id   @default(autoincrement())
  description String?
  email String
  password String

  @@map("users")
}

model Post {
  id  Int   @id     @default(autoincrement())
  content String
  imageUrl String?

  @@map("posts")
}